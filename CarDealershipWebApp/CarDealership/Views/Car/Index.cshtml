@model IEnumerable<CarDealership.Models.Car>
<body style="background-color:indianred">
    @{
        ViewBag.Title = "Index";
    }


    <button type="button" class="btn btn-info btn-lg">@Html.ActionLink("Add A Car", "Add", "Car")</button>
    <h2  style="color:blue">Check out these fine, high-quality cars for sale! </h2>
    <h3 style="color:black">CLICK ON PICTURES FOR DETAILS!</h3>
    @if (ViewBag.User != null)
    {
        <h3>@ViewBag.User.UserMessage</h3>
    }
    <div class="container">

        @for (int i = 0; i < Model.Count(); i = i + 3)
            {
                var ca = Model.ElementAt(i);
            <div class="row">
                <div class="col-md-4">
                    <a href="@Url.Action("Details", new { id = ca.Id })">
                        <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                    </a>
                </div>
                @if ((i + 1) < Model.Count())
                {
                    ca = Model.ElementAt(i + 1);
                    <div class="col-md-4">
                        <a href="@Url.Action("Details", new { id = ca.Id })">
                            <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                        </a>
                    </div>
                }
                @if ((i + 2) < Model.Count())
                {
                    ca = Model.ElementAt(i + 2);
                    <div class="col-md-4">
                        <a href="@Url.Action("Details", new { id = ca.Id })">
                            <img src="@ca.ImageUrl" alt="This is a car for sale" class="car-image" />
                        </a>
                    </div>
                }
            </div>
                <div>
                    &nbsp;
                </div>

        }

    </div>
</body>